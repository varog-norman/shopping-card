.free-text
	font-family OpenSans
	font-weight 400
	font-size 14px
	line-height 45px
	color #666

	&_little
		font-size 14px
		line-height 20px
		color #666
	
.additional-info-input
	width 150px
	height 30px
	color #222
	font-family Futura
	font-size 14px
	line-height 30px
	padding 0 5px
	border none
	border 1px solid #dfdfdf
	border-radius 3px
	
.additional-info-title
	font-family Futura
	font-size 12px
	color #666
	font-weight 500
	margin-bottom 5px
	
textarea
	width 100%
	height 90px
	resize none
	font-family OpenSans
	font-weight 400
	font-size 14px
	line-height 20px
	padding 10px 10px
	box-sizing border-box
	
.dnd 
	width 100%
	height 130px
	border 1px solid #dfdfdf
	margin-top 10px
	
	&_container
		display inline-block
		position relative
		width 220px
		height 100%
		left 50%
		transform translateX(-50%)
		
		&_image
			display inline-block
			position relative
			width 60px
			height 60px
			left 50%
			transform translateX(-50%)
			margin 10px
			background-image url(../images/dnd.png)
			
		&_text
			font-family Futura
			font-weight 400
			font-size 14px
			line-height 21px
			color #dedede
			
			div
				display inline-block
				font-size 14px
				line-height 21px