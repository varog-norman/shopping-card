.items-table 
	
	ul 
		
		li 
			height 60px
			margin-bottom 20px
	
	&_titles
		height 10px
		
		&_list
			
			li 
				font-family Futura
				font-size 12px
				color #222
				font-weight 500
				float left
				
			&_cell-1
				width 280px
				
			&_cell-2
			&_cell-3
			&_cell-4
				width 100px
				
	&_item
				
		&_cell-1
			width 280px
			height 60px
			float left
			
			&_photo
				width 60px
				height 60px
				float left
				
			&_description
				font-family Futura
				font-size 12px
				line-height 20px
				color #222
				font-weight 500
				float left
				margin-left 10px
				
		&_cell-2
			
			&_quantity
				font-family Futura
				font-size 12px
				line-height 20px
				color #222
				font-weight 500
				margin-left 30px
				margin-right 30px
				
		&_cell-3
			
			&_price
				font-family Futura
				font-size 12px
				line-height 20px
				color #222
				font-weight 500
				
		&_cell-4
			
			&_remove
				font-family Futura
				font-size 12px
				line-height 20px
				color #78a8bb
				font-weight 500
				
				span
					margin-left 20px
				
				img 
					position absolute
					margin-top 4px
				
				&:hover
					cursor pointer
					
					span
						border-bottom-color #78a8bb
						text-decoration underline
			
		&_cell-2
		&_cell-3
		&_cell-4
			width 100px
			height 60px
			float left
			
		&_cell-1	
		&_cell-2
		&_cell-3
		&_cell-4
			> div
				height 20px
				margin 20px auto
				
.button-minus
	position absolute
	margin-top 4px
	width 11px
	height 11px
	border none
	background none
	background-image url(../images/button-minus.png)
	
	&:hover
		cursor pointer
		opacity 0.9
		
	&:active
		opacity 1
	
.button-plus
	position absolute
	margin-top 4px
	margin-left -11px
	width 11px
	height 11px
	border none
	background none
	background-image url(../images/button-plus.png)
	
	&:hover
		cursor pointer
		opacity 0.9
		
	&:active
		opacity 1
		
.total
	height 130px
	background-color #F7F7F7
	
	&_amount
		width 200px
		height 90px
		float right 
		margin-top 20px 
		margin-bottom 20px
		
		&_text
			width 100px
			height 100%
			text-align right
			float left
			
		&_numbers
			width 100px
			height 100%
			text-align center
			float left
			
		&_entry
			font-family Futura
			font-size 12px
			line-height 20px
			color #999
			font-weight 500	
			
		&_entry-big
			font-family Futura
			font-size 14px
			line-height 40px
			color #222
			font-weight 500
			
.promo-code
	position relative
	top 90px
	left 20px
	
.promo-code-text
	width 67px
	height 20px
	color #222
	font-family Futura
	font-size 12px
	line-height 22px
	border none
	border 1px solid #dfdfdf
	border-radius 3px
	
.promo-code-apply
	width 67px
	height 22px
	margin-left 10px
	border none
	border-radius 3px
	background none
	background-color #78a8bb
	color #fff
	font-family Futura
	font-size 12px
	line-height 22px
		
	&:hover
		opacity 0.8
		cursor pointer
		
	&:active
		opacity 1